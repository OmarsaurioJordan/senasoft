{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Esquema de personajes creados por Sataduel para hacer batallas",
  "type": "object",
  "properties": {
    "general": {
      "type": "object",
      "properties": {
        "nombre_usuario": { "type": "string", "minLength": 1, "maxLength": 16 },
        "nombre_personaje": { "type": "string", "minLength": 1, "maxLength": 16 },
        "resumen_personaje": { "type": "string", "minLength": 0, "maxLength": 255 },
        "nivel": { "type": "integer", "minimum": 0, "maximum": 100 }
      },
      "required": ["nombre_usuario", "nombre_personaje", "resumen_personaje", "nivel"]
    },
    "caracteristicas": {
      "type": "object",
      "properties": {
        "arma_principal": { "type": "integer", "minimum": 0, "maximum": 9 },
        "arma_secundaria": { "type": "integer", "minimum": 0, "maximum": 9 },
        "habilidades": {
          "type": "array",
          "items": { "type": "integer", "minimum": 0, "maximum": 9 },
          "minItems": 0, "maxItems": 3
        },
        "cabeza": { "type": "integer", "minimum": 0, "maximum": 9 },
        "especie": { "type": "integer", "minimum": 0, "maximum": 9 },
        "color_fisico": { "type": "integer", "minimum": 0, "maximum": 9 },
        "vestimenta": { "type": "integer", "minimum": 0, "maximum": 9 },
        "color_vestido": { "type": "integer", "minimum": 0, "maximum": 9 },
        "personalidad": { "type": "integer", "minimum": 0, "maximum": 9 }
      },
      "required": ["arma_principal", "arma_secundaria", "habilidades", "cabeza", "especie", "color_fisico", "vestimenta", "color_vestido", "personalidad"]
    }
  },
  "required": ["general", "caracteristicas"]
}
